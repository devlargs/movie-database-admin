{
  "name": "next-ts-chakra-boilerplate",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "tsc-node": "tsc -p tsconfig.json",
    "lint:js": "eslint src --ext .ts --ext .tsx --fix",
    "lint": "next lint",
    "check-updates": "ncu -u",
    "check-updates-minor": "ncu -u -t minor",
    "generate-types": "graphql-codegen",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run tsc-node && lint-staged"
    }
  },
  "lint-staged": {
    "{**/*,*}.{json,css,md}": [
      "prettier --write"
    ],
    "{**/*,*}.{ts,tsx,js,jsx}": [
      "eslint .eslintrc.js --fix --max-warnings=-1",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@apollo/react-hooks": "^4.0.0",
    "@chakra-ui/icons": "^1.1.7",
    "@chakra-ui/react": "^1.8.5",
    "@emotion/react": "^11.8.1",
    "@emotion/styled": "^11.8.1",
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "framer-motion": "^6.2.8",
    "jest": "^27.5.1",
    "next": "12.1.0",
    "nprogress": "^0.2.0",
    "react": "17.0.2",
    "react-color": "^2.19.3",
    "react-dom": "17.0.2",
    "react-hook-form": "^7.28.1",
    "ts-jest": "^27.1.4",
    "whatwg-fetch": "^3.6.2",
    "zustand": "^3.7.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.2.2",
    "@graphql-codegen/typescript": "^2.3.1",
    "@graphql-codegen/typescript-document-nodes": "^2.2.5",
    "@graphql-codegen/typescript-operations": "^2.2.4",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.39",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "8.9.0",
    "eslint-config-next": "12.1.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^4.3.8",
    "lint-staged": "^12.3.4",
    "npm-check-updates": "^12.4.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  }
}
